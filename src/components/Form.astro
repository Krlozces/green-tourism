<section
class="flex my-6 flex-col justify-center items-center md:flex-row lg:flex-row lg:px-24">
    <article class="w-80 my-4 lg:w-auto">
        <h3 class="font-bold text-2xl">Get in Touch</h3>
        <form action="#" method="post">
            <div>
                <label for="name"></label>
                <input type="text" name="name" id="name" placeholder="Name" class="outline-none border p-2 w-80 rounded-md mb-4 mt-2" />
                <label for="email"></label>
                <input type="email" name="email" id="email" placeholder="Email" class="outline-none border rounded-md w-80 p-2" />
            </div>
            <div>
                <label for="phone"></label>
                <input type="tel" name="phone" id="phone" placeholder="Phone" class="outline-none border rounded-md w-80 p-2 mb-4" />
                <label for="subject"></label>
                <input type="text" name="subject" id="subject" placeholder="Subject" class="outline-none border rounded-md w-80 p-2" />
            </div>
            <textarea name="message" id="message" cols="83" rows="10" placeholder="Your Message" class="outline-none border rounded-md p-2 w-80 md:w-auto"></textarea>
            <button type="submit" class="rounded-lg bg-orange-400 hover:bg-blue-950 text-white py-2 px-4">
                SUBMIT NOW
            </button>
        </form>
    </article>
    <article class="bg-orange-500 w-80 rounded-md">
        <h3 class="text-white font-bold text-2xl p-4">Contact Information</h3>
        <div class="bg-white p-4 m-6 rounded-md">
            <div></div>
            <div>
                <h4 class="text-black font-bold">Call Phone</h4>
                <p class="text-slate-400">+51 987-654-321</p>
            </div>
        </div>
        <div class="bg-white p-4 m-6 rounded-md">
            <div></div>
            <div>
                <h4 class="text-black font-bold">Email Us</h4>
                <p class="text-slate-400">example@gmail.com</p>
            </div>
        </div>
        <div class="bg-white p-4 m-6 rounded-md"> 
            <div></div>
            <div>
                <h4 class="text-black font-bold">Address</h4>
                <p class="text-slate-400">#740 Robinson Kuke</p>
                <p class="text-slate-400">Jackson, OH 45630</p>
            </div>
        </div>
    </article>
</section>