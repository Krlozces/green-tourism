---
type Props={
    title: string;
    number: number;
};
const { title, number } = Astro.props;
---
<div class="flex flex-col flex-wrap rounded-full border-orange-600 h-28 w-28 border-4 items-center justify-center mx-2">
    <span class="text-blue-900 font-bold lg:text-2xl">{number}</span>
    <span class="text-blue-950 font-semibold">{title}</span>
</div>